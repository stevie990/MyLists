<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <!--Material-->
    <style name="Widget.MyList.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.MyList</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.MyList.Toolbar</item>
    </style>

    <style name="Widget.MyList.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.MyList.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.MyList.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--  MaterialAlertDialog  -->
    <style name="Widget.MyList.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/mylist_next_button_state_list_anim</item>
    </style>

    <style name="Widget.MyList.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MaterialAlertDialog.MyList.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--  Toolbar  -->
    <style name="TextAppearance.MyList.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
